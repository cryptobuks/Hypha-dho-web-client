@import "custom-colors.styl"
@import "corner-ribbon.styl"
@import "scrollbar.styl"
@import "headlines.styl"
@import "buttons.styl"
@import "typography.styl"
@import "typography-signup.styl"

body
  font-family 'Source Sans Pro', sans-serif !important
  background $internal-bg
  color $body

.notif-icon
  font-size 24px !important
  padding-right 0
  margin-right 5px

.fa-life-ring
  margin-right 1px
  margin-bottom 3px

.world-bg
  position fixed
  background-size cover !important
  opacity 0.3
  height 100vh
  width 100vw
// Removes the spinner buttons on number inputs
input[type="number"]::-webkit-outer-spin-button
input[type="number"]::-webkit-inner-spin-button
  -webkit-appearance none
  margin 0

input[type="number"]
  -moz-appearance textfield

.font-size-w-desc
  font-size: 12px


.q-scrollarea__thumb
  background-color #00000033 !important
  width 8px !important
a, a:hover, a:focus
  color $secondary
  text-decoration none

.q-notifications__list
  margin-bottom 20px !important
  z-index 0 !important
  margin-left 60px !important

.q-notification
  width calc(100% - 40px) !important
  max-width 100% !important
  padding-left 25px !important
  padding-right 25px !important
  box-shadow none !important
  height 38px !important
  border-radius 0 !important
  border-bottom-left-radius 27px !important
  border-bottom-right-radius 27px !important
.q-notification__wrapper
  width 100% !important


.q-notification__actions
  padding 0 !important

.q-notification__actions >>> i
  font-size 112px !important

.q-notification__message
  text-align center !important
